<section class="section">
    <div class="container is-fullhd">

        <div class="content">
            <ol type="1">
                {{#each errors}}
                {{!-- la méthode "each" va permettre de passer sur toutes les propriétés de l'objet (ici errors : cf "userCreate.js) --}}
                <li>{{this}}</li>
                {{!-- "this" récupère ce qu'il y a dans "errors" (cf "userCreate.js) --}}
                {{!-- et affiche le message d'erreur sur le site --}}
                {{/each}}
                {{!-- la boucle passera donc l'élement 1 de l'objet : s'il y a, il affiche, puis ainsi de suite --}}
                {{!-- https://www.zendevs.xyz/les-boucles-for-foreach-each-en-javascript/ --}}
            </ol>
        </div>

        <form action="/user/register" method="POST" enctype="multipart/form-data">
            {{!-- on envoi les données saisi dans l'url indiqué : ici : "/user/register" --}}
            {{!-- ATTENTION : il faut bien ajouter cette URL dans app.js dans le code démarrant par "app.post" pour qu'il connaisse le lieu ou récupérer les données // puis indiquer la méthode utilisée "POST" (car app.post) --}}
            {{!-- "enctype="multipart/form-data" : permet de prendre en compte le fichier jpeg --}}
            <div class="field">
                <label class="label">Name</label>
                <div class="control">
                    <input class="input" type="text" name="name" placeholder="Text input" value={{data.name}}>
                    {{!-- "value=" nous permet d'afficher la valeur / la valeur ici est "data.name" car on va chercher le "name" de l'objet "data" (cf userCreate.js et userRegister.js--}}
                </div>
            </div>

            <div class="field">
                <label class="label">Email</label>
                <div class="control has-icons-left has-icons-right">
                    <input class="input is-danger" type="email" name="email" placeholder="Email input" value={{data.email}}>
                    <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                    </span>
                </div>
            </div>

            <div class="field">
                <p class="control has-icons-left">
                    <input class="input" type="password" name="password" placeholder="Password" value={{data.password}}>
                    <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                    </span>
                </p>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Enregistrer</button>
                </div>
                <div class="control">
                    <button class="button is-link is-light">Annuler</button>
                </div>
            </div>
        </form>
    </div>

</section>

